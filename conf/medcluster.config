
// Job parameters to set for this environment

// Resource manager settings

params {
	gatk_bundle_path = "/work_beegfs/ikmb_repository/references/gatk/v2"
  genomes_base = "/work_beegfs/ikmb_repository/references/variant_calling" 
	
	max_memory = 250.GB
	max_cpus = 24
	max_time = 120.h
	maxMultiqcEmailFileSize = 25.MB
}

executor {
  name="slurm"
  queueSize=40
}

// Process setting

process {

  // Global cluster parameters
  executor = 'slurm'

  submitRateLimit = '5 sec'
  pollInterval = '5 sec'
  queue = 'all'
  memory = { 8.GB * task.attempt }
  cpus = { 1 * task.attempt }
  time = { 2.h * task.attempt }
  errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
  maxRetries = 3
  maxErrors = '-1'
 
}

singularity {
	enabled = true
	runOptions = "-B /work_beegfs -B /scratch -B /work_beegfs"
	cacheDir = "/work_beegfs/ikmb_repository/singularity_cache"
}
